---
component: menu
---
<!-- Menu toggle -->
<a href="#menu" id="menuLink" class="menu-link">
	<span></span>
</a>
<div id="menu">
	<div class="pure-menu pure-menu-open">
		<a class="pure-menu-heading" href="/">{{site.title}}</a>
		<ul>
			{{#each pages}}
      <li{{#if this.isCurrentPage}} class="pure-menu-selected"{{/if}}>
        <a href="{{relative dest this.dest}}">{{ data.title }}</a>
      </li>
      {{/each}}
		</ul>
	</div>
</div>